public final class Utils
{
    // Separador de campos
    public final static String FS;

    // Tipos de comprobantes fiscales
    public final static String FACTURA_A;
    public final static String FACTURA_B_C;
    public final static String NOTA_DEBITO_A;
    public final static String NOTA_DEBITO_B_C;
    public final static String TIQUET;

    // Parametros display
    public final static String NO_DISPLAY;
    public final static String DISPLAY;
    public final static String AUMENTA_DISPLAY;

    // Tipos de imputacion
    public final static String SUMA_MONTO; // Venta normal, el monto es sumado al subtotal parcial del comprobante
    public final static String RESTA_MONTO;

    // Codigo del comando statusRequest
    public final static String statusRequest;
    // Codigo del comando openFiscalReceipt
    public final static String openFiscalReceipt;
    // Codigo del comando printFiscalText
    public final static String printFiscalText;
    // Codigo del comando printLineItem
    public final static String printLineItem;

    static
    {
	FS = Character.toString((char) 28);
	FACTURA_A = "A";
	FACTURA_B_C = "B";
	NOTA_DEBITO_A = "D";
	NOTA_DEBITO_B_C = "E";
	TIQUET = "T";
	NO_DISPLAY = "0";
	DISPLAY = "1";
	AUMENTA_DISPLAY = "2";
	SUMA_MONTO = "M";
	RESTA_MONTO = "m";
	statusRequest = Character.toString((char) 42);
	openFiscalReceipt = Character.toString((char) 64);
	printFiscalText = Character.toString((char) 65);
	printLineItem = Character.toString((char) 66);
    }
}
